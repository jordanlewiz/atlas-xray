{
  "name": "atlas-xray-extension",
  "version": "0.1.0",
  "description": "Bare bones Chrome extension using React, IndexedDB, and Sass.",
  "main": "background.js",
  "scripts": {
    "build:js": "esbuild popup.jsx --bundle --outfile=popup.js --format=iife --loader:.js=jsx --define:process.env.NODE_ENV=\"production\"",
    "build:css": "sass popup.scss popup.css",
    "build": "npm run build:js && npm run build:css"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "sass": "^1.69.0"
  }
}
