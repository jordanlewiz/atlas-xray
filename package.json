{
  "name": "atlas-xray-extension",
  "version": "0.1.0",
  "description": "Bare bones Chrome extension using React, IndexedDB, and Sass.",
  "main": "background.js",
  "scripts": {
    "build:js": "esbuild src/popup.jsx --bundle --outfile=dist/popup.js --format=iife --loader:.js=jsx --define:process.env.NODE_ENV='\"production\"'",
    "build:css": "sass src/assets/styles/popup.scss dist/popup.css --source-map",
    "build:content": "esbuild src/components/floatingButton.js --bundle --outfile=dist/floatingButton.js --format=iife --loader:.js=jsx",
    "build:floatingButtonContentScript": "esbuild src/floatingButtonContentScript.js --bundle --outfile=dist/floatingButtonContentScript.js --format=iife --loader:.js=jsx",
    "build:background": "esbuild src/background.js --bundle --outfile=dist/background.js --format=iife",
    "build": "npm run build:js && npm run build:css && npm run build:content && npm run build:floatingButtonContentScript"
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "graphql": "^16.11.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "sass": "^1.69.0"
  }
}
