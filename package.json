{
  "name": "atlas-xray-extension",
  "version": "0.1.0",
  "description": "Bare bones Chrome extension using React, IndexedDB, and Sass.",
  "main": "background.js",
  "scripts": {
    "build:icons": "magick src/assets/icon.svg -resize 16x16 src/assets/icons/icon-16.png && magick src/assets/icon.svg -resize 48x48 src/assets/icons/icon-48.png && magick src/assets/icon.svg -resize 128x128 src/assets/icons/icon-128.png",
    "build:manifest": "mkdir -p dist/icons && cp manifest.json dist/ && cp src/assets/icons/*.png dist/icons/",
    "build:js": "node esbuild.config.js popup",
    "build:css": "sass src/assets/styles/popup.scss dist/popup.css --source-map",
    "build:html": "echo '<!DOCTYPE html><html lang=\"en\"><head><meta charset=\"utf-8\"><meta name=\"viewport\" content=\"width=device-width, initial-scale=1\"><title>Atlas Xray</title><link rel=\"stylesheet\" href=\"popup.css\"></head><body><div id=\"root\"></div><script src=\"popup.js\"></script></body></html>' > dist/popup.html",
    "build:content": "node esbuild.config.js content",
    "build:chromeExtension": "node esbuild.config.js chromeExtension",
    "build:background": "node esbuild.config.js background",
    "build": "npm test && npm run --silent build:js && npm run --silent build:css && npm run --silent build:html && npm run --silent build:content && npm run --silent build:chromeExtension && npm run --silent build:background && npm run --silent build:manifest",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:custom": "node scripts/release.js",
    "release": "npm run release:patch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "@atlaskit/button": "^23.4.0",
    "@atlaskit/lozenge": "^13.0.5",
    "@atlaskit/modal-dialog": "^14.3.4",
    "@atlaskit/popup": "^4.3.7",
    "@atlaskit/section-message": "^8.5.1",
    "@atlaskit/select": "^21.2.4",
    "chrono-node": "^2.8.4",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "graphql": "^16.11.0",
    "prosemirror-to-html": "^1.0.1-c",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "babel-jest": "^30.0.5",
    "esbuild": "^0.25.9",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "sass": "^1.69.0",
    "typescript": "^5.9.2"
  }
}
