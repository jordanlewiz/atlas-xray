{
  "manifest_version": 3,
  "name": "Atlas Xray",
  "version": "0.1.10",
  "description": "Chrome Plugin to add program management view to Atlassian Projects",
  "icons": {
    "16": "dist/icons/icon-16.png",
    "48": "dist/icons/icon-48.png",
    "128": "dist/icons/icon-128.png"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/icons/icon-16.png",
      "48": "dist/icons/icon-48.png",
      "128": "dist/icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://*.atlassian.com/*",
    "https://*.jira.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.com/*",
        "https://*.jira.com/*"
      ],
      "js": ["dist/contentScript.js"],
      "css": ["dist/contentScript.css"]
    }
  ]
}
